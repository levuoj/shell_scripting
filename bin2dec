if [ "$#" -ne 1 ];then
    echo "USAGE: ./bin2dec BinNumber" 1>&2
    echo "Convert binary number to decimal number" 1>&2
    exit 1
fi

for binary in $*
do
    if [ "${binary/[^01]}" != "$binary" ]
then
    echo "Error"
    exit 1
continue
fi
let value=2#$binary
echo -n "bin2dec($binary)="
echo $value
done
