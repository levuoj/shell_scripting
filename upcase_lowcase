if [ "$#" -eq 0 ];then
    echo "USAGE: ./upcase_lowcase -l -u" 1>&2
    echo "-l : lowcase" 1>&2
    echo "-u : upcase" 1>&2
    exit 1
fi

cat $ | tr [a-z] [A-Z] 
